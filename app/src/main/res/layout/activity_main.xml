<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="zpam.lab1.lab3.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="495dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Nazwa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nazwa"/>
        <TextView
                android:text="Numer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/numer"/>
        <Button
                android:text="Dodaj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/dodaj" android:onClick="dodaj"/>
        <Button
                android:text="Usuń"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/usun" android:onClick="usun"/>
        <TextView
                android:text="Zawartość bazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/zawartoscBazy"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
